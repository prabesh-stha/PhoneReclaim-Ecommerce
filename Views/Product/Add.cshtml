@model Product
@{
  ViewData["Title"] = "Add";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<h2 class="row mb-3">Add product</h2>
<form action="/product/add" method="post" enctype="multipart/form-data">
  <div class="row mb-3">
    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="Name" type="text" class="form-control">
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <select asp-for="Brand" class="form-select">
        <option selected>Select Brand</option>
        @foreach (var g in Enum.GetValues<Brand>())
        {
          <option value="@g">@g</option>
        }
      </select>
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="Condition" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <select asp-for="Condition" class="form-select">
        <option selected>Condition</option>
        @foreach (var g in Enum.GetValues<Condition>())
        {
          <option value="@g">@g</option>
        }
      </select>
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="Price" type="text" class="form-control">
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <textarea asp-for="Description" rows="4" cols="50" placeholder="Short description of Phone...."></textarea>
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="ImagePath" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input type="file" name="imageFile" accept=".jpg,.jpeg,.png,.gif" class="form-control" />
    </div>
  </div>
  <button type="submit" class="btn btn-outline-success">Add product</button>
  <a asp-action="Index" asp-controller="Home" class="btn btn-outline-danger">Cancel</a>
</form>