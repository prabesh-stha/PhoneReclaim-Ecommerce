@model List<Product>
@{
    ViewData["Title"] = "User Product";
    var userName = ViewBag.userName as string;
}
<h5 class="mb-5 text-dark font-monospace">@userName's products</h5>
@if (Model.Count > 0)
{
    <div class="container">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                            data-mdb-ripple-color="light">
                            <img src="@product.ImagePath" class="card-img-top img-fluid" style="height: 200px;" />

                            <div class="mask">
                                <div class="d-flex justify-content-start align-items-end h-100">
                                    <h5><span class="badge ms-2" style="background: green;">@product.Condition</span></h5>
                                </div>
                            </div>
                            <div class="hover-overlay">
                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                            </div>

                        </div>
                        <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title mb-3 text-dark font-monospace">@product.Name</h5>
                                <div>
                                    <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.Id"><i class="bi bi-pencil text-warning me-2"
                                            title="Edit"></i></a>
                                    <a href="/product/delete/@product.Id"><i class="bi bi-trash3 text-danger me-2"
                                            title="Delete"></i></a>
                            </div>
                                </div>

                            <p class="text-secondary font-monospace">@product.Brand</p>

                            <p class="text-secondary">$@product.Price</p>


                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

}
else
{
    <p>No results found.</p>
}
