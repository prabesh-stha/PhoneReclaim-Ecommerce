@using PhoneReclaim.Data.Models;
@using PhoneReclaim.Controllers;
@model LoginVM

@{
  ViewData["Title"] = "Sign In";
}
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>
                                <form asp-action="Login" asp-controller="Account" method="post" class="mx-1 mx-md-4">
                                    @if (!ViewData.ModelState.IsValid)
                                        {
                                            <div class="alert alert-danger">
                                                <ul>
                                                    @foreach (var key in ViewData.ModelState.Keys)
                                                    {
                                                        foreach (var error in ViewData.ModelState[key].Errors)
                                                        {
                                                            <li>@error.ErrorMessage</li>
                                                        }
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    <div class="mb-4 d-flex align-items-center">
                                        <i class="bi bi-person-fill me-3"></i>
                                        <input asp-for="UserName" type="text" class="form-control" placeholder="Name" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="mb-4 d-flex align-items-center">
                                        <i class="bi bi-lock-fill me-3"></i>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-check mb-4">
                                    <input asp-for="RememberMe" id="RememberMe" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-check-label"></label>
                                </div>
                                    <div class="d-flex justify-content-center mb-5">
                                        <a asp-action="Register" class="text-decoration-none">Don't have an account?</a>
                                    </div>
                                    <div class="d-flex justify-content-center mb-3">
                                        <button type="submit" class="btn btn-outline-primary btn-lg">Login</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
