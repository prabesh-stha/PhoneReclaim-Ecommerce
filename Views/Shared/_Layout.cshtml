<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhoneReclaim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhoneReclaim.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
    <div class="d-flex flex-row justify-content-between align-items-center w-100">
        <div>
            <a class="navbar-brand" href="/home/index">
                <img src="/Image/logo.png" height="70" width="70px" alt="">
                <small class="text-muted">Phone Reclaim</small>
            </a>
        </div>
        <div class="d-flex flex-row align-items-center">
            <label class="me-2" for="brand">Condition:</label>
            <div class="navbar-collapse me-2">
                <form asp-action="FilterCategory" asp-controller="Home" method="post"
                      class="d-sm-inline-flex justify-content-between">
                    <div class="form-group">
                        <select name="category" id="brand" class="form-control" onchange="this.form.submit()">
                            <option value="Condition">Condition</option>
                            @foreach (var condition in Enum.GetValues<Condition>())
                            {
                                <option value="@condition">@condition</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <label class="me-2" for="brand">Brand:</label>
            <div class="navbar-collapse me-2">
                <form asp-action="Filter" asp-controller="Home" method="post"
                      class="d-sm-inline-flex justify-content-between">
                    <div class="form-group">
                        <select name="selectedBrand" id="brand" class="form-control" onchange="this.form.submit()">
                            <option value="All Brands">All Brands</option>
                            @foreach (var brand in Enum.GetValues<Brand>())
                            {
                                <option value="@brand">@brand</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="navbar-collapse">
                <form asp-action="Search" asp-controller="Home" method="post"
                      class="d-sm-inline-flex justify-content-between ms-auto">
                    <input type="search" class="form-control" placeholder="Search"
                           aria-describedby="button-addon2" name="searchTerm">
                    <button class="btn" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
            <div class="ms-3">
                <ul class="navbar-nav flex-grow-1 me-2">
                    <li class="nav-item"><a asp-action="Add" asp-controller="Product" class="btn btn-outline-success"><i
                                class="bi bi-plus-square me-2"></i>Add Product</a></li>
                </ul>
            </div>
            <div class="ms-3">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </div>
</div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PhoneReclaim
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
